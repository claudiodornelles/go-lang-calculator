{
  "builders": [
    {
      "type": "docker",
      "image": "golang:1.17.1",
      "commit": true,
      "changes": [
        "ENV ANSIBLE_INVENTORY $HOME/ansible_hosts",
        "EXPOSE 8090",
        "CMD $HOME/application/startup.sh collectd",
        "ENTRYPOINT $HOME/application/calculator"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get -y install ansible",
        "sh -c 'touch $HOME/ansible_hosts'",
        "sh -c 'echo \"[localhost]\" > $HOME/ansible_hosts'",
        "sh -c 'echo \"localhost ansible_connection=local\" >> $HOME/ansible_hosts'"
      ]
    },
    {
      "type": "file",
      "source": "application",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "cp -r /tmp/application $HOME",
        "chmod +x $HOME/application/*.sh",
        "cd $HOME/application",
        "$HOME/application/startup.sh ansible",
        "$HOME/application/startup.sh buildApplication"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "calculator-app",
        "tag": "1.0"
      }
    ]
  ]
}
